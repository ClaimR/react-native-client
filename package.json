{
  "name": "@claimr/react-native-client",
  "version": "2.0.0",
  "description": "React Native client to integrate with the ClaimR API.",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "claimr-react-native-client.podspec",
    "!lib/typescript/example",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.idea"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "format": "yarn lint --fix",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "android"
  ],
  "repository": "https://github.com/ClaimR/react-native-client",
  "author": "Adriaan Knapen <hi@aknapen.nl> (https://claimr.tools)",
  "license": "MIT",
  "private": false,
  "bugs": {
    "url": "https://github.com/ClaimR/react-native-client/issues"
  },
  "homepage": "https://github.com/ClaimR/react-native-client#README",
  "dependencies": {
    "@apollo/client": "^3.3.6",
    "@xstate/react": "^1.2.2",
    "graphql": "^15.4.0",
    "xstate": "^4.15.4"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^9.1.2",
    "@react-native-community/bob": "^0.16.2",
    "@react-native-community/eslint-config": "^2.0.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/jest": "^26.0.15",
    "@types/react": "^16.14.0",
    "@types/react-native": "^0.63.42",
    "commitlint": "^9.1.2",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "pod-install": "^0.1.13",
    "prettier": "^2.2.0",
    "react": "^16.14.0",
    "react-native": "^0.63.4",
    "release-it": "^14.2.2",
    "typescript": "^4.1.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn format && yarn typescript"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "semi": false,
          "singleQuote": true,
          "trailingComma": "es5",
          "printWidth": 110
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 110
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
